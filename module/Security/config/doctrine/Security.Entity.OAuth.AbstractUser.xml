<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi="http://www.w3.org/2001/XMLSchema-instance"
                  schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Security\Entity\OAuth\AbstractUser">
        <field name="username" type="string" length="255" nullable="false" unique="true"/>
        <field name="password" type="string" length="2000" nullable="false"/>
        <field name="scope" type="string" length="2000" nullable="true"/>
    </mapped-superclass>
</doctrine-mapping>
